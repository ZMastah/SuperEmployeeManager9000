@page
@model SuperEmployeeManager9000.Pages.EditSalaryPeriodModel

@{
    ViewData["Title"] = "EditSalaryPeriod";
}

<h2>EditSalaryPeriod</h2>

<h4>SalaryHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalaryHistory.ID" />

            @* Visible part of Salary Period data (Name is not editable here). *@
            <div class="form-group">
                <p><b>Name</b></p>
                @{ WriteLiteral(Model.Employee.Name);}
            </div>
            <div class="form-group">
                <label asp-for="SalaryHistory.SalaryPeriodBegan" class="control-label"></label>
                <input asp-for="SalaryHistory.SalaryPeriodBegan" class="form-control" />
                <span asp-validation-for="SalaryHistory.SalaryPeriodBegan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryHistory.SalaryPeriodEnded" class="control-label"></label>
                <input asp-for="SalaryHistory.SalaryPeriodEnded" class="form-control" />
                <span asp-validation-for="SalaryHistory.SalaryPeriodEnded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryHistory.SalaryForThePeriod" class="control-label"></label>
                <input asp-for="SalaryHistory.SalaryForThePeriod" class="form-control" />
                <span asp-validation-for="SalaryHistory.SalaryForThePeriod" class="text-danger"></span>
            </div>

            @* Rest of the Salary Period data to not break model state. *@
            <div style="display:none;">
                <label asp-for="SalaryHistory.EmployeeID" class="control-label"></label>
                <input asp-for="SalaryHistory.EmployeeID" class="form-control" />
                <span asp-validation-for="SalaryHistory.EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
