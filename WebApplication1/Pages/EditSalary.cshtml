@page
@model SuperEmployeeManager9000.Pages.EditSalaryModel

@{
    ViewData["Title"] = "Edit Employee Salary";
}

<h4>Edit chosen employee's salary.</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.ID" />

            @* Visible part of Employee data (Name is not editable here). *@
            <div class="form-group">
                <p><b>Name</b></p>
                @{ WriteLiteral(Model.Employee.Name);}
            </div>
            <div class="form-group addSmallPaddingTop">
                <p><b>Salary</b></p>
                <input asp-for="Employee.Salary" class="form-control" />
                <span asp-validation-for="Employee.Salary" class="text-danger"></span>
            </div>
            <div class="form-group addSmallPaddingTop">
                <p><b>Date of change</b></p>
                <input asp-for="Employee.DateHired" class="form-control" />
                <span asp-validation-for="Employee.DateHired" class="text-danger"></span>
            </div>

            @* Rest of the Employee data to not break model state. *@
            <div style="display:none;">
                <p><b>Salary</b></p>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div style="display:none;">
                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
            <div style="display:none;">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div style="display:none;">
                <label asp-for="Employee.IsCurrentlyHired" class="control-label"></label>
                <input asp-for="Employee.IsCurrentlyHired" class="form-control" />
                <span asp-validation-for="Employee.IsCurrentlyHired" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Employees">Back to the list of employees.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}